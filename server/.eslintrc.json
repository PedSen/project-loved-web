{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "plugin:n/recommended",
    "../.eslintrc.json"
  ],
  "plugins": [
    "regex"
  ],
  "rules": {
    "n/no-process-exit": "off",
    "n/shebang": "off",
    "regex/invalid": [
      "error",
      [
        {
          "regex": "\\.locals",
          "message": "Use `typedLocals` instead"
        },
        {
          "regex": "INSERT[^()]+VALUES",
          "message": "List fields when running INSERTs"
        }
      ]
    ]
  },
  "settings": {
    "import/resolver": {
      "node": true,
      "typescript": true
    }
  }
}
